#include <stdio.h>
#include <cs50.h>

int main(void)
{
    int height;
    int space;
    int hash;
    
    do
    {
        height = get_int("Height:");
    }
    while(height<0 || height>23);

    for(int i=0; i<height; i++)
    {
        for(space = (height-i); space>=2; space--)
        {
            printf("");
        }

        for(hash=0; hash<=(i+1); hash++)
        {
            printf("#");
        }
        printf("\n");
    }
}
