#include <stdio.h>
#include <cs50.h>

int main(void)
{
    int yükseklik;
    int boşluk;
    int blok;
    
    do
    {
        yükseklik = get_int("Yükseklik:");
    }
    while(yükseklik<0 || yükseklik>23);

    for(int i=0; i<yükseklik; i++)
    {
        for(boşluk = (yükseklik-i); boşluk>=2; boşluk--)
        {
            printf("");
        }

        for(blok=0; blok<=(i+1); blok++)
        {
            printf("$");
        }
        printf("\n");
    }
}
